<%layout('./layouts/boilerplate')%>
   
<link rel="stylesheet" href="/stylesheets/mbxClusterMap.css"></link>
<div id="map"></div>
   <h1>All Campgrounds</h1>
    <% for(let camp of campgrounds){  %> 
    <div class="card mb-3 rounded">
        <div class="row mt-2">
            <div class="col-md-4 ms-2">
                <%if(camp.images.length){%>
                <img  class="img-fluid border border-dark rounded" src="<%=camp.images[0].thumbnail%>">
                <%} else {%>
                    <img  class="img-fluid border border-dark rounded" src="data:image/png;base64,">
                    <%}%> 
            </div>
            <div class="col-mg-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=camp.title%>
                    </h5>
                    <p class="card-text"><%=camp.description%></p>
                    <p class="card-text">
                        <small class="text-muted"><%=camp.location%></small>
                    </p>
                    <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">View <%=camp.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% } %> 
    <script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgrounds = {features:<%-JSON.stringify(campgrounds)%>}
    </script>

<script src="/scripts/mbxClusterMap.js"></script>